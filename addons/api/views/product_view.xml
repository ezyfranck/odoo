    <record id="action_get_product_view_anapro" model="ir.actions.act_window">
        <field name="name">ANAPRO - Post EzyConnect</field> 
        <field name="res_model">get.anapro</field>
        <field name="view_mode">tree</field>
    </record>

<!-- CMDCLI -->
